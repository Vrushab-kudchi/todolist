<%- include("layouts/header") %>
  <div class="box" id="heading">
    <h1>
      <%= todaysday %>
    </h1>
  </div>

  <div class="box">

    <% newlist.forEach(function(element){ %>

      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" onchange="this.form.submit()" name="checked" value="<%= element._id %>">
          <p>
            <%= element.item %>
          </p>
        </div>
      </form>
      <% }) %>

        <form action="/" method="post" class="item">
          <input type="text" name="todoinput" placeholder="Add List" />
          <button name="button" type="submit">+</button>
        </form>
  </div>

  <%- include("layouts/footer") -%>
